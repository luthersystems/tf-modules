#!/bin/bash
set -euxo pipefail

# Install latest security updates
yum update --security -y

# Disable root SSH
sed -i 's/#PermitRootLogin yes/PermitRootLogin no/' /etc/ssh/sshd_config
systemctl reload sshd

${common_userdata}

